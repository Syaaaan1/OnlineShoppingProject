@{
    ViewData["Title"] = "Sign Up";
}



<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="signup-container">
        <h2 class="text-center mt-4">Sign Up</h2>
        <form asp-action="SignUp" method="post" class="shadow p-4 rounded">
            <div class="form-group">
                <label for="phoneNumber" class="font-weight-bold">Phone Number</label>
                <input type="text" class="form-control form-control-sm" id="phoneNumber" name="phoneNumber" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-3 animated-button">Next</button>
        </form>
    </div>
</div>


<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control {
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .animated-button {
        transition: background-color 0.3s, transform 0.3s;
    }

        .animated-button:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .vh-100 {
        height: 100vh;
    }

    .signup-container {
        position: absolute;
        top: 30%; 
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        display: flex;
        flex-direction: column; 
        align-items: center; /* Center horizontally */
    }

    

</style>
